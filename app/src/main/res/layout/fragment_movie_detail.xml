<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="movie"
    type="com.jonareas.android.popularmovies.model.entities.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.movies.MovieDetailFragment"

        >

        <ImageView
            android:id="@+id/image_view_movie_poster"
            android:layout_width="0dp"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic"
            android:scaleType="centerCrop"
            imageUrl="@{movie.posterPath}"
            android:contentDescription="@string/movie_poster" />


        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_movie_poster"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_standard"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/grid_2"
            android:gravity="center"
            android:text="@{movie.movieTitle}"
            android:fontFamily="@font/abeezee"
            android:textAppearance="?attr/textAppearanceHeadline4"
            tools:text="The Godfather" />

        <TextView
            android:id="@+id/text_view_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_standard"
            android:padding="@dimen/grid_2"
            android:gravity="center"
            android:text="@{movie.overview}"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="@tools:sample/lorem/random" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
